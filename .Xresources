! Load Perl extensions
*perl-ext-common:                default,url-select,font-size,clipboard

! Increase/decrease font size
*keysym.C-equal:                 perl:font-size:increase
*keysym.C-plus:                  perl:font-size:incglobal
*keysym.C-minus:                 perl:font-size:decrease
*keysym.C-underscore:            perl:font-size:decglobal

! Clipboard management
*keysym.C-C:                     perl:clipboard:copy
*keysym.C-V:                     perl:clipboard:paste
*keysym.M-C-V:                   perl:clipboard:paste_escaped

! URL open
*url-select.button:              2
*url-select.launcher:            /usr/bin/xdg-open
*url-select.underline:           true

! Fix Ctrl-arrows when using VIM
*keysym.C-Up:                    \033[1;5A
*keysym.C-Down:                  \033[1;5B
*keysym.C-Left:                  \033[1;5D
*keysym.C-Right:                 \033[1;5C
